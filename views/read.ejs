<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheet/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Index_CRUD</title>
</head>
<body>
    <div class="w-full h-full bg-zinc-900 p-10 text-white" >
        <div class="nav mb-10">
            <a class="text-blue-500" href="/">Tu Ghar jaa re</a>
        </div>
        <h1 class="text-3xl tracking-tighter mb-3">Read User</h1>
        <div class="users flex gap-3 flex-wrap">
            <% users.forEach(function(user){ %>
                <div class="user w-72 p-4 bg-zinc-800 rounded-lg">
                    <div class=" w-full h-52 rounded-lg bg-red-200"></div>
                    <h3 class="text-xl tracking-tighter"><%= user.name%></h3>
                    <h5 class="text-zinc-500"><%= user.email%></h5>
                    <h5 class="text-zinc-500"><%= user.username %></h5>
                    <div class="flex gap-3 mt-3">
                        <a class="text-yellow-300" href="/edit/<%=user._id%>">Edit User</a>
                        <a class="text-red-600" href="/delete/<%= user._id%>" >Delete User</a>
                    </div>
                 </div>
            <% })%>     
        </div>
    </div>
</body>
</html>